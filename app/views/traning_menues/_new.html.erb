<%provide(:title, 'New TrainingMenue')%>

<div class="modal-dialog modal-lg modal-dialog-center">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                 <span aria-hidden="true">&times;</span>
            </button>
            <h1 class="modal-title">新規作成</h1><br>
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <%= form_with(model: @training_menu, url: user_training_menues_path(@user, day_id: params[:day_id], body_part: params[:body_part]), local: true, method: :post) do |f| %>
                        <%= render partial: 'shared/error_messages' , locals: { obj: @training_menu } %>

                        <%= f.label :training_event, class: "label-form" %>
                        <%= f.text_field :training_event, class: "form-control box10" %><br>

                        <%= f.label :body_part, class: "label-form" %>
                        <%= f.select :body_part, options_for_select(@body_parts.map{|c|[c[:body_part], c[:id]]}),
                            {include_blank: false}, {class: 'form-control box10'} %>

                        <p class="center"><%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %></p>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>


